    "@balena/jellyfish-uuid": "^1.0.12",
    "bluebird": "^3.7.2",
    "debounce-promise": "^3.1.2",
    "fast-equals": "^2.0.0",
    "fast-json-patch": "^2.2.1",
    "json-e": "^4.3.0",
